<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/coin_symbol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_text_margin"
        android:contentDescription="@string/coin_widget_symbol_desc"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic"
        tools:text="BTC" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_text_margin"
        android:contentDescription="@string/coin_widget_price_desc"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic"
        tools:text="$ 6500" />

    <TextView
        android:id="@+id/change_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_text_margin"
        android:contentDescription="@string/coin_widget_change_desc"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic"
        tools:text="1 %" />
</LinearLayout>